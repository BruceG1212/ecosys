use graph ldbc_snb

drop query q101_

CREATE QUERY q101_ () SYNTAX v1 {

  SumAccum<int> @@person_cnt;

  Start = {Person.*};

  //find how many post/comment liked by a person
  V = SELECT s 
      FROM Start:s- (LIKES)->Comment:tgt;

  V = SELECT s
      FROM V:s
      ACCUM @@person_cnt += 1;

  Print @@person_cnt;

}

