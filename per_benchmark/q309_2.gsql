use graph ldbc_snb

drop query q309_2
CREATE QUERY q309_2 () SYNTAX _v2 {

  SumAccum<int> @forum_cnt;

  V = SELECT f
      FROM Tag:t -(<HAS_TAG)- Forum:f- (CONTAINER_OF>)-Post:p - (<LIKES) - Person:s
      WHERE s.firstName == "Viktor" AND s.lastName == "Akhiezer"
      PER (s,f)
      ACCUM s.@forum_cnt += 1, f.@forum_cnt += 1;

  Print V.size();

}

