use graph ldbc_snb

drop query q307_2
CREATE QUERY q307_2 () SYNTAX _v2 {

  SumAccum<int> @comment_cnt;

  V = SELECT t
      FROM Comment:t-(<LIKES)-Person:s
      WHERE s.firstName == "Viktor" AND s.lastName == "Akhiezer" 
      PER (s, t)
      ACCUM 
         t.@comment_cnt += 1;

  Print V.size();

}

