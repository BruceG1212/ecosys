use graph ldbc_snb

drop query q108_2
CREATE QUERY q108_2 () SYNTAX _v2 {

  SumAccum<int> @forum_cnt;

  //per tgt local accum
  V = SELECT f
      FROM Person:s- (LIKES>)-Post:p - (<CONTAINER_OF)-:f
      WHERE s.firstName == "Viktor" AND s.lastName == "Akhiezer"
      PER (f)
      ACCUM f.@forum_cnt += 1;

  Print V.size();

}

