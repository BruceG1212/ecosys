use graph ldbc_snb

drop query q301_2
CREATE QUERY q301_2 () SYNTAX _v2 {

  SumAccum<int> @@comment_cnt;

  //find how many post/comment liked by a person
  V = SELECT tgt
      FROM Comment:s- (<LIKES)-Person:tgt
      PER (s, tgt) 
      ACCUM @@comment_cnt += 1;

  Print @@comment_cnt;

}

//install query q301_2
//run query q301_2()
