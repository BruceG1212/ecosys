use graph ldbc_snb

drop query q308_2
CREATE QUERY q308_2 () SYNTAX _v2 {

  SumAccum<int> @forum_cnt;

  //per tgt local accum
  V = SELECT f
      FROM Forum:f- (CONTAINER_OF>)-Post:p - (<LIKES) - Person:s
      WHERE s.firstName == "Viktor" AND s.lastName == "Akhiezer"
      PER (f,s)
      ACCUM s.@forum_cnt += 1, f.@forum_cnt += 1;

  Print V.size();

}

