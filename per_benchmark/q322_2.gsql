use graph ldbc_snb
drop query q322_2
CREATE QUERY q322_2 () SYNTAX _v2 {
  MaxAccum<INT> @oldest;
  V = SELECT t 
      FROM Comment:t-(<LIKES)-Person:s 
      PER (s,t)
      ACCUM t.@oldest += datetime_to_epoch(s.creationDate)
      POST_ACCUM t.@oldest+= datetime_to_epoch(t.creationDate)
      ORDER BY t.@oldest
      LIMIT 2;
  Print  V;

}

