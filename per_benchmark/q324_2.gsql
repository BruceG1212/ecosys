use graph ldbc_snb

drop query q324_2
CREATE QUERY q324_2 () SYNTAX _v2 {
  MaxAccum<INT> @oldest;
  //find how many post/comment liked by a person
  V = SELECT t
      FROM Tag:t -(<HAS_TAG)- :f - (CONTAINER_OF>)-Post:p- (<LIKES)-Person:s
      PER (s,t)
      ACCUM t.@oldest += s.id
      POST_ACCUM t.@oldest += t.id
      ORDER BY t.@oldest
      LIMIT 2;

  Print V;

}

