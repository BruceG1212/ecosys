use graph ldbc_snb

drop query q301
CREATE QUERY q301 () SYNTAX _v2 {

  SumAccum<int> @@comment_cnt;

  //find how many post/comment liked by a person
  V = SELECT tgt
      FROM Person:s- (LIKES>)-Comment:tgt
      PER (s, tgt) 
      ACCUM @@comment_cnt += 1;

  Print @@comment_cnt;

}

