use graph ldbc_snb

drop query q311
CREATE QUERY q311 () SYNTAX _v2 {
  MaxAccum<INT> @oldest;
  //find how many post/comment liked by a person
  V = SELECT s
      FROM Person:s- (LIKES>)-Post:p - (<CONTAINER_OF)-:f
      PER (s,f)
      ACCUM s.@oldest += datetime_to_epoch(f.creationDate)
      ORDER BY s.@oldest
      LIMIT 2;

  Print V;

}

