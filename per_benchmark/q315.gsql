use graph ldbc_snb

drop query q315
CREATE QUERY q315 () SYNTAX _v2 {
  MaxAccum<INT> @oldest;
  //find how many post/comment liked by a person
  V = SELECT t
      FROM Person:s- (LIKES>)-Post:p - (<CONTAINER_OF)-:f -(HAS_TAG>)-:t
      PER (s,t)
      ACCUM t.@oldest += s.id
      ORDER BY t.@oldest
      LIMIT 2;

  Print V;

}

