use graph ldbc_snb

drop query q307
CREATE QUERY q307 () SYNTAX _v2 {

  SumAccum<int> @comment_cnt;

  V = SELECT t
      FROM Person:s- (LIKES>)-Comment:t
      WHERE s.firstName == "Viktor" AND s.lastName == "Akhiezer" 
      PER (s, t)
      ACCUM 
         t.@comment_cnt += 1;

  Print V.size();

}

