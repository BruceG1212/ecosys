use graph ldbc_snb

drop query q308
CREATE QUERY q308 () SYNTAX _v2 {

  SumAccum<int> @forum_cnt;

  V = SELECT f
      FROM Person:s- (LIKES>)-Post:p - (<CONTAINER_OF)-:f
      WHERE s.firstName == "Viktor" AND s.lastName == "Akhiezer"
      PER (s,f)
      ACCUM s.@forum_cnt += 1, f.@forum_cnt += 1;

  Print V.size();

}

