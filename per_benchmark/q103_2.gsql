use graph ldbc_snb

drop query q103_2
CREATE QUERY q103_2 () SYNTAX _v2 {

  SumAccum<int> @@person_cnt;

  //find how many post/comment liked by a person
  V = SELECT s
      //FROM Person:s- (LIKES>)-Post:p - (<CONTAINER_OF)-:f - (HAS_TAG>) - :t
      FROM Tag:t-(<HAS_TAG) - :f - (CONTAINER_OF>)- Post:p - (<LIKES)- Person:s
      PER (s)
      ACCUM @@person_cnt += 1;

  Print @@person_cnt;

}

