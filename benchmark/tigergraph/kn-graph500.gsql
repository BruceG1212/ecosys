# return the k-hop neighbors count.
CREATE QUERY khop(VERTEX<MyNode> start_node, INT depth) for graph graph500{

    int i = 0; 

    Start = {start_node};

    WHILE (i < depth) DO
        Start = SELECT v
                FROM Start:u - (MyEdge:e)->:v;
        i = i + 1;
   END;

   PRINT Start.size();
}
